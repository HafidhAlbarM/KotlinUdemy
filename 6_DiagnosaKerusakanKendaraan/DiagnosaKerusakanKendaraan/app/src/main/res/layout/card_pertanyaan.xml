<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="10pt">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPertanyaan" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Ya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnYa" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPertanyaan"/>
    <Button
            android:text="TIDAK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTidak" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPertanyaan" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="31dp" android:layout_marginRight="31dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>