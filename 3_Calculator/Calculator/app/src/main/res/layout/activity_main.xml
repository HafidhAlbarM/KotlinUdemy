<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etShowNumber" android:text="0" android:gravity="right"
            android:background="@color/AbuAbu" android:textSize="36sp" android:textColor="@color/Putih"
            android:layout_weight="1" android:paddingTop="10pt"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buAC" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="buEvent"/>
            <Button
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buPlusMinus" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="buEvent"/>
            <Button
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button5" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
            <Button
                    android:text="/"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buOpEvent"
                    android:background="@color/buOperationColor" android:textColor="@color/Putih"
                    android:textSize="18sp" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu7" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:onClick="buEvent"/>
            <Button
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu8" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:onClick="buEvent"/>
            <Button
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu9" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:onClick="buEvent"/>
            <Button
                    android:text="X"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button8"
                    android:background="@color/buOperationColor" android:textColor="@color/Putih"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu4" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:onClick="buEvent"/>
            <Button
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu5" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:onClick="buEvent"/>
            <Button
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu6" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:onClick="buEvent"/>
            <Button
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button12"
                    android:background="@color/buOperationColor" android:textColor="@color/Putih"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu1" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="buEvent"/>
            <Button
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu2" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="buEvent"/>
            <Button
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu3" android:background="@color/WhiteBack"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="buEvent"/>
            <Button
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button16"
                    android:background="@color/buOperationColor" android:textColor="@color/Putih"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">
        <Button
                android:text="0"
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/bu0"
                android:background="@color/WhiteBack"
                android:textSize="18sp"
                android:layout_weight="4" android:onClick="buEvent"/>
        <Button
                android:text=","
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/buDot"
                android:background="@color/WhiteBack"
                android:textSize="18sp"
                android:layout_weight="1" android:onClick="buEvent"/>
        <Button
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/button"
                android:background="@color/buOperationColor"
                android:textColor="@color/Putih"
                android:textSize="18sp"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>