<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnimalInfo">

    <ImageView
            android:layout_width="140dp"
            android:layout_height="129dp" app:srcCompat="@drawable/baboon"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ivAnimalImage" android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Babon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvAnimalName" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ivAnimalImage" android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvAnimalDesc" app:layout_constraintTop_toBottomOf="@+id/tvAnimalName"
            android:layout_marginTop="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>